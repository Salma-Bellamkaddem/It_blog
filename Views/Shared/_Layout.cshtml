@using FineBlog.Data;
@using FineBlog.ViewModels;
@inject ApplicationDbContext _context

@{
    var setting = _context.Settings!.ToList();
    var vm = new SettingVM()
    {
        SiteName = setting[0].SiteName,
        GithubUrl = setting[0].GithubUrl,
        FacebookUrl = setting[0].FacebookUrl,
        TwitterUrl = setting[0].TwitterUrl
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - @(vm.SiteName==null?"Site Name":vm.SiteName)</title>
    <link rel="icon" type="image/x-icon" href="~/blog/assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/blog/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black" id="mainNav" style=" font-size:18px; font-family: sans-serif">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">@(vm.SiteName==null?"Site Name":vm.SiteName)</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0" >

                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4 active" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Page" asp-action="About">About</a></li>
                  
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Page" asp-action="Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Page" asp-action="PrivacyPolicy">Privacy Policy</a></li>
                    
                   
                </ul>
            </div>
        </div>
    </nav>
 


    <!-- Main Content-->
    @RenderBody()

        <!-- Footer -->
    <footer class="text-center text-lg-start text-white" style="background-color: black;font-family: sans-serif">


            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: Links -->
                <section class="">
                    <!--Grid row-->
                    <div class="row">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">
                               NEW BLOG 
                            </h6>
                            <p>
                                Here you can use rows and columns to organize your footer
                                content. Lorem ipsum dolor sit amet, consectetur adipisicing
                                elit.
                            </p>
                        </div>
                        <!-- Grid column -->

                        <hr class="w-100 clearfix d-md-none" />

                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">Blog</h6>
                            <p>
                                Java
                            </p>
                            <p>
                                Devops
                            </p>
                            <p>
                                Django
                            </p>
                            <p>
                                Angular
                            </p>
                        </div>
                        <!-- Grid column -->

                        <hr class="w-100 clearfix d-md-none" />

                        <!-- Grid column -->
                        <hr class="w-100 clearfix d-md-none" />

                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">Contact</h6>
                            <p><i class="fas fa-home mr-3"></i> CASABLANCA, MAROC</p>
                            <p><i class="fas fa-envelope mr-3"></i> salma@gmail.com</p>
                            <p><i class="fas fa-phone mr-3"></i> 0666666</p>
                            <p><i class="fas fa-print mr-3"></i> 0666666</p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">Follow us</h6>

                            <!-- Facebook -->
                        <a class="btn btn-primary btn-floating m-1 rounded-circle"
                           style="background-color: #4284C4"
                               href="@vm.FacebookUrl"
                               role="button">
                                <i class="fab fa-facebook-f"></i>
                            </a>

                            <!-- Twitter -->
                        <a class="btn btn-primary btn-floating m-1 rounded-circle"
                               style="background-color: #55acee"
                               href="@vm.TwitterUrl"
                               role="button">
                                <i class="fab fa-twitter"></i>
                            </a>

                            <!-- Google -->
                        <a class="btn btn-primary btn-floating m-1 rounded-circle"
                               style="background-color: #dd4b39"
                               href="@vm.TwitterUrl"
                               role="button">
                                <i class="fab fa-google"></i>
                            </a>

                           

                           
                            <!-- Github -->
                        <a class="btn btn-primary btn-floating m-1 rounded-circle"
                               style="background-color: #333336"
                               href=@vm.GithubUrl"
                               role="button">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                    <!--Grid row-->
                </section>
                <!-- Section: Links -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3"
                 style="background-color: rgba(0, 0, 0, 0.2)">
                Copyright &copy; 
                <a class="text-white" href="#">@(vm.SiteName == null ? "Site Name" : vm.SiteName) 2024</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->
  



    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~blog/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>
