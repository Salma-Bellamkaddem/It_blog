                            {
                            <img class="card-img-top" src="~/thumbnails/default_image.png" style="object-fit:cover; height:100%; width:100%">

                            }
                            else
                            {
                            <img class="card-img-top" src="~/thumbnails/@post.ThumbnailUrl" style="object-fit:cover; height:100%; width:100%">
                            }
            <div class="card-body">
                <div class="text-section">
                    <h5 class="card-title fw-bold">@post.Title</h5>
                    <p class="card-text">@post.ShortDescription</p>
                    <p>
                        <small class="text-muted">
                            Posted by
                            <a href="#!" class="text-primary  text-decoration-none">@post.ApplicationUser!.FirstName @post.ApplicationUser!.LastName</a>
